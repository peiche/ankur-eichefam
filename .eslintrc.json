{
    "extends": [
        "plugin:@wordpress/eslint-plugin/recommended",
        "prettier"
    ],
    "ignorePatterns": [
        "src/js/components/**/*",
        "src/js/autocomplete.js",
        "src/js/instantsearch.js",
        "src/js/util.js"
    ],
    "plugins": [
        "prettier"
    ],
    "env": {
        "browser": true,
        "es6": true,
        "jquery": true
    },
    "globals": {
        "algolia": true,
        "algoliasearch": true,
        "instantsearch": true,
        "_": true
    },
    "rules": {
        "prettier/prettier": ["error"]
    }
}
