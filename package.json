{
  "name": "ankur-eichefam",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "lint:css": "wp-scripts lint-style \"src/**/*.scss\"",
    "lint:js": "wp-scripts lint-js \"src/**/*.js\"",
    "lint:js:fix": "wp-scripts lint-js --fix \"src/**/*.js\"",
    "lint": "npm run lint:css && npm run lint:js",
    "clean": "rimraf \"./assets\" \"./ankur-eichefam\"",
    "build": "npm run prettier:check && npm run clean && wp-scripts build",
    "build:js": "wp-scripts build ./src/js/instantsearch.js --output-path=./assets/js",
    "export": "copyfiles assets/**/* parts/**/* patterns/**/* src/**/* templates/**/* *.php readme.txt style.css theme.json ankur-eichefam",
    "zip": "bestzip ankur-eichefam.zip ankur-eichefam",
    "prettier:check": "prettier --check \"{inc,parts,patterns,src,styles,templates}/**/*.+(html|scss|js)\"",
    "prettier:write": "prettier --write \"{inc,parts,patterns,src,styles,templates}/**/*.+(html|scss|js)\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peiche/ankur-eichefam.git"
  },
  "author": "Paul Eiche <paul@boldoak.design>",
  "license": "GPL-2.0-or-later",
  "bugs": {
    "url": "https://github.com/peiche/ankur-eichefam/issues"
  },
  "homepage": "https://eichefam.net",
  "devDependencies": {
    "@wordpress/prettier-config": "^2.20.0",
    "@wordpress/scripts": "^26.19.0",
    "bestzip": "^2.2.1",
    "copy-webpack-plugin": "^11.0.0",
    "copyfiles": "^2.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "mini-css-extract-plugin": "^2.6.0",
    "path": "^0.12.7",
    "postcss-preset-env": "^7.7.1",
    "prettier": "^3.0.0",
    "rimraf": "^2.7.1",
    "webpack-fix-style-only-entries": "^0.6.1"
  }
}
